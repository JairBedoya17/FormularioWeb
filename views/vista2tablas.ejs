<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Vistas</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>

<body class="container" style="margin-top: 50px;">

    <div class="card">
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <a href="solicitud-fecha" class="btn btn-default">Regresar</a>
                <li class="nav-pill active">

                    <a class="nav-link text-center">Informacion</a>
                </li>

            </ul>

        </div>
        <div class="card-body">

            <% if(data.length) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Cantidad de ventas</th>
                            <th scope="col">Cliente</th>
                            <th width="200px">Venta total</th>
                            <th scope="col">Productos</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i< data.length; i++) { %>
                            <tr>
                                <!--<th scope="row"><%= (i+1) %></th>-->
                                <td>
                                    <%= data[i].cantVentas%>
                                </td>
                                <td>
                                    <%= data[i].customerName%>
                                </td>
                                <td>
                                    <%= data[i].VentaTotal%>
                                </td>
                                <td>
                                    <%= data[i].ProductosDiferentes%>
                                </td>
                                <!--<td>
                        <a class="btn btn-success edit" href="../spotify/edit/<%=data[i].id%>">Edit</a>
                        <a class="btn btn-danger delete" onclick="return alert('Are You sure?')" href="../spotify/delete/<%=data[i].id%>">Delete</a>
                    </td>-->
                            </tr>
                            <% } %>
                    </tbody>
                </table>

                <% } %>

                    <!-- if result is empty -->
                    <% if(!data.length) { %>
                        <p class="text-center">No se encontraron resultados!</p>
                        <% } %>

        </div>
    </div>

</body>

</html>